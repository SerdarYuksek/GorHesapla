<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/css/navbarstyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyWebsite</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-survival101">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <div class="logo-container">
                        <img src="~/logo.jpg" alt="Logo" class="logo-image" />
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav mr-auto ">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="MainPage" asp-controller="Home" style="color: #112D4E; font-weight: bold;">Anasayfa  <i class="fa-solid fa-house-chimney" style="color: #112D4E;"></i></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="CashPage" asp-controller="Home" style="color: #112D4E; font-weight: bold;">Kasa  <i class="fa-solid fa-cash-register" style="color: #112D4E;"></i></a>
                        </li>

                        <li class ="nav-item">
                            <a class="nav-link" asp-action="ProductManagment" asp-controller="Home" style="color: #112D4E; font-weight: bold;"> <i class="fa-solid fa-cube" style="color: #112D4E;"></i> Ürün Yönetimi</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="StockManagement" asp-controller="Home" style="color: #112D4E; font-weight: bold;"> <i class="fa-solid fa-chart-area" style="color: #112D4E;"></i> Stok Takip</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="ContactPage" asp-controller="Home" style="color: #112D4E; font-weight: bold;">İletişim  <i class="fa-solid fa-comments" style="color: #112D4E;"></i></a>
                        </li>

                    </ul>
                    <form class="form-inline">
                        <div class="input-group search-box">
                            <input type="text" class="form-control rounded-pill" placeholder="Aradığın bişey mi var?" aria-label="Search for...">
                            <span class="input-group-btn">
                                <button class="search-button" type="button"><i class="fa-solid fa-magnifying-glass fa-beat"></i></button>
                            </span>
                        </div>
                    </form>
                </div>


            </div>

        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center">
            &copy; 2024 - AkıllıFaturalandırma - <a asp-area="" asp-page="/Privacy">Gizlilik Politikası</a>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
    <script src="~/js/script.js"></script>
</body>

</html>
