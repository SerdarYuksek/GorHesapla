<!DOCTYPE html>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="~/AdminTemp/assets/img/apple-icon.png">
    <title>
        Ana Sayfa
    </title>
    <!-- Fonts and icons -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="~/AdminTemp/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/AdminTemp/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="~/AdminTemp/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="~/AdminTemp/assets/css/argon-dashboard.css?v=2.0.4" rel="stylesheet" />
</head>

<body class="g-sidenav-show bg-gray-100">

    <section class="py-3 py-md-5 mb-11">
    <div class="container-xl align-items-center justify-content-center mt-5">
        <div class="row">
            <!-- Sol bölüm - Soldaki 4 kutu -->
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="height: 200px;">
                            <div class="card-body p-3">
                                <div class="numbers text-center">
                                    <p class="text-sm mb-0 text-uppercase font-weight-bold badge bg-primary text-wrap">Günlük Satış</p>
                                    <h5 class="font-weight-bolder pt-3">
                                        1000
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="height: 200px;">
                            <div class="card-body p-3">
                                <div class="numbers text-center">
                                    <p class="text-sm mb-0 text-uppercase font-weight-bold badge bg-primary text-wrap">Haftalık Satış</p>
                                    <h5 class="font-weight-bolder pt-3">
                                        1000
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="height: 200px;">
                            <div class="card-body p-3">
                                <div class="numbers text-center">
                                    <p class="text-sm mb-0 text-uppercase font-weight-bold badge bg-primary text-wrap">Aylık Satış</p>
                                    <h5 class="font-weight-bolder pt-3">
                                        1000
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="height: 200px;">
                            <div class="card-body p-3">
                                <div class="numbers text-center">
                                    <p class="text-sm mb-0 text-uppercase font-weight-bold badge bg-primary text-wrap">Yıllık Satış</p>
                                    <h5 class="font-weight-bolder pt-3">
                                        1000
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Sağ bölüm - Ana Grafik Kutusu -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header pb-0 text-center pt-3 bg-transparent">
                        <h6 class="text-capitalize">Bölüm Geneli Kullanıcı Dağılımı</h6>
                    </div>
                    <div class="card-body p-3">
                        <div class="piechart">
                            <canvas id="line-bar" class="chart-canvas"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>
    <!-- Core JS Files -->
    <script src="~/admintemp/assets/js/plugins/chartist.min.js"></script>
    <script src="~/AdminTemp/assets/js/core/popper.min.js"></script>
    <script src="~/AdminTemp/assets/js/core/bootstrap.min.js"></script>
    <script src="~/AdminTemp/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/AdminTemp/assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="~/admintemp/assets/js/plugins/chartjs.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/chart.js"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
</body>

</html>
